<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/public/css/styles.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            .stats-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 20px;
                margin: 30px 0;
            }
            
            .stat-card {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 24px;
                border-radius: 16px;
                text-align: center;
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
                transition: all 0.3s ease;
            }
            
            .stat-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
            }
            
            .stat-number {
                font-size: 2em;
                font-weight: 700;
                margin-bottom: 8px;
            }
            
            .stat-label {
                font-size: 0.9em;
                opacity: 0.9;
                text-transform: uppercase;
                letter-spacing: 1px;
            }
            
            .activity-feed {
                background: white;
                border-radius: 16px;
                padding: 24px;
                margin: 30px 0;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                border: 1px solid rgba(226, 232, 240, 0.8);
            }
            
            .activity-item {
                padding: 12px 0;
                border-bottom: 1px solid #f1f5f9;
                display: flex;
                align-items: center;
                gap: 16px;
            }
            
            .activity-item:last-child {
                border-bottom: none;
            }
            
            .activity-icon {
                width: 40px;
                height: 40px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-weight: bold;
            }
            
            .activity-content {
                flex: 1;
            }
            
            .activity-title {
                font-weight: 600;
                color: #2d3748;
                margin-bottom: 4px;
            }
            
            .activity-time {
                font-size: 0.85em;
                color: #64748b;
            }
            
            .quick-actions {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 16px;
                margin: 30px 0;
            }
            
            .action-button {
                display: block;
                padding: 20px;
                background: white;
                border: 2px solid #e2e8f0;
                border-radius: 16px;
                text-decoration: none;
                color: #2d3748;
                font-weight: 500;
                text-align: center;
                transition: all 0.3s ease;
                position: relative;
                overflow: hidden;
            }
            
            .action-button:hover {
                border-color: #667eea;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
            }
            
            .action-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                transition: left 0.3s ease;
                z-index: -1;
            }
            
            .action-button:hover::before {
                left: 0;
            }
            
            .action-button:hover {
                color: white;
                border-color: transparent;
            }
            
            .welcome-section {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 40px;
                border-radius: 20px;
                margin: 20px 0 40px;
                text-align: center;
                position: relative;
                overflow: hidden;
            }
            
            .welcome-section h1 {
                color: white;
                margin-bottom: 16px;
                background: none;
                -webkit-text-fill-color: white;
            }
            
            .welcome-section p {
                opacity: 0.9;
                font-size: 1.1em;
            }
        </style>
    </head>

    <body>
        <nav class="navbar">
            <span class="brand">
                <a href="/">SpinCycle Laundry - Dashboard</a>
            </span>
            <div class="auth">
                <a href="/">Home</a>
                <a href="/users/logout">Logout</a>
            </div>
        </nav>

        <div class="main-content">
            <div class="dashboard-container">
                <div class="welcome-section">
                    <h1>Welcome back, <%= user.firstName %> <%= user.lastName %>!</h1>
                    <p>Manage your laundry services and account settings from your dashboard</p>
                </div>

                <!-- User Statistics -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-number"><%= typeof stats !== 'undefined' ? stats.activeOrders : 0 %></div>
                        <div class="stat-label">Active Orders</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number"><%= typeof stats !== 'undefined' ? stats.totalOrders : 0 %></div>
                        <div class="stat-label">Total Orders</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number"><%= typeof stats !== 'undefined' ? stats.totalSpent : 'â‚±0.00' %></div>
                        <div class="stat-label">Total Spent</div>
                    </div>
                </div>

                <!-- User Information Grid -->
                <div class="user-info-grid">
                    <!-- User ID removed from UI for privacy -->
                    <div class="info-card">
                        <h3>Email Address</h3>
                        <p><%= user.email %></p>
                    </div>
                    <div class="info-card">
                        <h3>Account Role</h3>
                        <p class="status-badge status-active"><%= user.role %></p>
                    </div>
                    <div class="info-card">
                        <h3>Account Status</h3>
                        <p class="status-badge status-active">Active</p>
                    </div>
                    <div class="info-card">
                        <h3>Member Since</h3>
                        <p>January 2025</p>
                    </div>
                </div>

                <!-- Quick Actions -->
                <h2>Quick Actions</h2>
                <div class="quick-actions">
                    <% if (user.role === 'admin') { %>
                        <a href="/admin/orders" class="action-button">Manage Orders</a>
                        <a href="/admin/payments" class="action-button">Sales Reports</a>
                        <a href="/admin/manage-services" class="action-button">Manage Services</a>
                        <a href="/admin/support" class="action-button">Support Tickets</a>
                    <% } else { %>
                        <a href="/services/book" class="action-button">Book New Service</a>
                        <a href="/orders/my" class="action-button">View My Orders</a>
                        <a href="/users/profile/edit" class="action-button">Edit Profile</a>
                        <a href="/billing" class="action-button">Billing & Payments</a>
                        <a href="/support" class="action-button">Contact Support</a>
                    <% } %>
                </div>
            </div>
        </div>

        <footer>
            <p>&copy; 2025 SpinCycle Laundry. Making laundry effortless.</p>
        </footer>

        <script>
            function bookService() {
                alert('Booking service feature - This would redirect to a service booking page');
                // In a real app, this would redirect to /services/book
            }

            function viewOrders() {
                alert('View orders feature - This would show order history');
                // In a real app, this would redirect to /orders
            }

            function editProfile() {
                alert('Edit profile feature - This would open profile settings');
                // In a real app, this would redirect to /profile/edit
            }

            function viewBilling() {
                alert('Billing feature - This would show payment history and methods');
                // In a real app, this would redirect to /billing
            }

            function contactSupport() {
                alert('Support feature - This would open support chat or form');
                // In a real app, this would redirect to /support
            }

            // Add some interactive animations
            document.addEventListener('DOMContentLoaded', function() {
                const cards = document.querySelectorAll('.stat-card, .info-card');
                cards.forEach((card, index) => {
                    card.style.animationDelay = `${index * 0.1}s`;
                    card.style.animation = 'fadeInUp 0.6s ease-out forwards';
                });
            });

            // CSS animations
            const style = document.createElement('style');
            style.textContent = `
                @keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
            `;
            document.head.appendChild(style);
        </script>
    </body>
</html>