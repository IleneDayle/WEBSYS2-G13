<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/public/css/styles.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <nav class="navbar">
            <span class="brand"><a href="/">SpinCycle Laundry</a></span>
            <div class="auth">
                <a href="/users/dashboard">Dashboard</a>
                <a href="/users/logout">Logout</a>
            </div>
        </nav>

        <div class="main-content">
            <h1>Billing & Payments</h1>
            <div style="max-width:900px; margin:20px auto;">
                <h3>Recent Payments</h3>
                <% if (!payments || payments.length === 0) { %>
                    <div class="message info">No payments found.</div>
                <% } else { %>
                    <table>
                        <thead><tr><th>Date</th><th>Order</th><th>Amount</th><th>Method</th></tr></thead>
                        <tbody>
                        <% payments.forEach(function(p){ %>
                            <tr>
                                <td><%= new Date(p.createdAt).toLocaleString() %></td>
                                <td><a href="/orders/<%= p.orderId %>"><%= p.orderId %></a></td>
                                <td>₱<%= p.amount %></td>
                                <td><%= p.method %></td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>
                <% } %>

                <h3 style="margin-top:24px;">Unpaid Orders</h3>
                <% const unpaid = orders.filter(o => o.paymentStatus !== 'paid'); %>
                <% if (unpaid.length === 0) { %>
                    <div class="message info">No unpaid orders.</div>
                <% } else { %>
                    <table>
                        <thead><tr><th>Order</th><th>Service</th><th>Amount</th><th>Action</th></tr></thead>
                        <tbody>
                        <% unpaid.forEach(function(o){ %>
                            <tr>
                                <td><a href="/orders/<%= o._id %>"><%= o._id %></a></td>
                                <td><%= o.serviceName %></td>
                                <td>₱<%= o.price %></td>
                                <td>
                                    <form method="POST" action="/billing/pay/<%= o._id %>"><button type="submit">Pay</button></form>
                                </td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>

        <footer>
            <p>&copy; 2025 SpinCycle Laundry.</p>
        </footer>
    </body>
</html>
