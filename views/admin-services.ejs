<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/css/styles.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            .admin-container {
                max-width: 900px;
                margin: 0 auto;
                padding: 30px 20px;
            }
            h1 {
                color: #667eea;
                margin-bottom: 30px;
                font-size: 2em;
            }
            .service-card {
                background: white;
                padding: 20px;
                border-radius: 8px;
                border: 1px solid #e2e8f0;
                margin-bottom: 12px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
                transition: all 0.3s ease;
            }
            .service-card:hover {
                box-shadow: 0 4px 16px rgba(102, 126, 234, 0.2);
            }
            .service-inputs {
                display: flex;
                gap: 12px;
                flex: 1;
                align-items: center;
            }
            .service-actions {
                display: flex;
                gap: 8px;
            }
            input {
                padding: 10px 12px;
                border: 1px solid #e2e8f0;
                border-radius: 6px;
                font-size: 0.95em;
                font-family: inherit;
            }
            input:focus {
                outline: none;
                border-color: #667eea;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }
            input[type="text"] {
                flex: 1;
                min-width: 200px;
            }
            input[type="number"] {
                width: 120px;
            }
            button {
                padding: 10px 16px;
                border: none;
                border-radius: 6px;
                font-weight: 500;
                cursor: pointer;
                transition: all 0.3s ease;
                font-size: 0.9em;
            }
            .btn-save {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }
            .btn-save:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            }
            .btn-delete {
                background: #f56565;
                color: white;
            }
            .btn-delete:hover {
                background: #e53e3e;
                transform: translateY(-2px);
            }
            .navbar .brand a {
                color: #667eea;
                text-decoration: none;
            }
            .empty-message {
                text-align: center;
                padding: 40px 20px;
                color: #888;
                font-size: 1.1em;
            }
        </style>
    </head>
    <body>
        <nav class="navbar">
            <span class="brand"><a href="/users/admin">üåÄ SpinCycle Admin</a></span>
            <div class="auth"><a href="/">Home</a><a href="/users/logout">Logout</a></div>
        </nav>
        <div class="main-content">
            <div class="admin-container">
                <h1>‚öôÔ∏è Manage Services</h1>
                <% if (!services || services.length === 0) { %>
                    <div class="empty-message">No services found.</div>
                <% } else { %>
                    <% services.forEach(s => { %>
                        <div class="service-card">
                            <form method="POST" action="/admin/services/update/<%= s.id %>" class="service-inputs">
                                <input type="text" name="name" value="<%= s.name %>" placeholder="Service name">
                                <input type="number" name="price" value="<%= s.price %>" placeholder="Price" step="0.01">
                                <button type="submit" class="btn-save">Save</button>
                            </form>

                            <form method="POST" action="/admin/services/delete/<%= s.id %>" class="service-actions" onsubmit="return confirm('Are you sure you want to delete this service?');">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </div>
                    <% }) %>
                <% } %>
            </div>
            </div>
        </div>
        <footer><p>&copy; 2025 SpinCycle Laundry. Making laundry effortless.</p></footer>
    </body>
</html>
