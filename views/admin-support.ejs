<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/public/css/styles.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <nav class="navbar">
            <span class="brand"><a href="/users/admin">Admin</a></span>
            <div class="auth"><a href="/users/logout">Logout</a></div>
        </nav>
        <div class="main-content">
            <h1>Support Tickets</h1>
            <div style="max-width:900px; margin:20px auto;">
                <% if (!tickets || tickets.length === 0) { %>
                    <div class="message info">No support tickets found.</div>
                <% } else { %>
                    <div style="display:grid; gap:12px;">
                        <% tickets.forEach(t => { %>
                            <div style="background:white; padding:12px; border-radius:8px; border:1px solid #e2e8f0;">
                                <strong><%= t.subject %></strong>
                                <p style="margin:6px 0; color:#64748b;"><%= t.message %></p>
                                <small><%= t.userEmail %> • <%= new Date(t.createdAt).toLocaleString() %></small>
                                <% if (t.responses && t.responses.length > 0) { %>
                                    <div style="margin-top:8px; padding-top:8px; border-top:1px dashed #e2e8f0;">
                                        <strong>Responses</strong>
                                        <% t.responses.forEach(r => { %>
                                            <div style="margin-top:6px;">
                                                <small><strong><%= r.responder %></strong> • <%= new Date(r.createdAt).toLocaleString() %></small>
                                                <p style="margin:4px 0; color:#2d3748;"><%= r.message %></p>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } %>

                                <form method="POST" action="/admin/support/respond/<%= t._id %>" style="margin-top:8px;">
                                    <label for="response-<%= t._id %>">Respond</label>
                                    <textarea id="response-<%= t._id %>" name="response" rows="3" style="width:100%; padding:8px; border-radius:6px; border:1px solid #e2e8f0;"></textarea>
                                    <button type="submit" style="margin-top:6px;">Send Response</button>
                                </form>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
        <footer><p>&copy; 2025 SpinCycle Laundry.</p></footer>
    </body>
</html>
